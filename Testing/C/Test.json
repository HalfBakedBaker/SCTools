{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-o",
                "${workspaceFolder}/helloworld",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/hello.cpp",
                "-I/mingw64/include/gtkmm-3.0",
                "-I/mingw64/lib/gtkmm-3.0/include",
                "-I/mingw64/include/atkmm-1.6",
                "-I/mingw64/include/gdkmm-3.0",
                "-I/mingw64/lib/gdkmm-3.0/include",
                "-I/mingw64/include/glibmm-2.4",
                "-I/mingw64/lib/glibmm-2.4/include",
                "-I/mingw64/include/pangomm-1.4",
                "-I/mingw64/lib/pangomm-1.4/include",
                "-I/mingw64/include/cairo",
                "-I/mingw64/include/pango-1.0",
                "-I/mingw64/include/gtk-3.0",
                "-I/mingw64/include/gdk-pixbuf-2.0",
                "-L/mingw64/lib",
                "-lgtkmm-3.0",
                "-latkmm-1.6",
                "-lgdkmm-3.0",
                "-lpangomm-1.4",
                "-lglibmm-2.4",
                "-lcairomm-1.0",
                "-lpango-1.0",
                "-lgdk_pixbuf-2.0",
                "-lgio-2.0",
                "-lgobject-2.0",
                "-lglib-2.0"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
